!!!
%html
  %head
    %title Itineraries
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = content_for :header
    = csrf_meta_tags
  %body
    .navbar.navbar-static-top
      .navbar-inner
        .container
          = link_to 'Itineraries', '#', class: 'brand'
          %ul.nav
            -# %li= link_to 'Emails', emails_path

            %li= link_to 'Stays', stays_path

            %li.dropdown
              = link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
                Journeys
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'Ferry', ferry_journeys_path
                %li= link_to 'Plane', plane_journeys_path
                %li= link_to 'Train', train_journeys_path

            %li.dropdown
              = link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
                Places
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'Ferry Terminals', ferry_terminals_path
                %li= link_to 'Lodgings', lodgings_path
                %li= link_to 'Train Stations', train_stations_path

            %li= link_to 'Money', money_path

    .container
      = yield
